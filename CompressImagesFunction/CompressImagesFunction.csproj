  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <CustomCommands>
      <CustomCommands>
        <Command>
          <type>AfterBuild</type>
          <command>cp ${TargetDir}/bin/runtimes/osx/native/libgit2-6311e88.dylib ${TargetDir}/bin/</command>
        </Command>
        <Command>
